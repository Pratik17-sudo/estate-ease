{
    "version": 2,
    "builds": [
        {
            "src": "client/",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "socket/app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/app.js"
        },
        {
            "src": "/socket/(.*)",
            "dest": "socket/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ]
}